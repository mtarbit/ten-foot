<form class="form-inline">
    <div class="row-fluid">
        <div class="span3"><h1>Files</h1></div>

        <div class="span6">
            <%= text_field_tag :terms, @terms, class: 'input-block-level', style: 'margin-top: 1.7em;' %>
        </div>

        <div class="span3">
            <a href="#" class="button submit" style="margin-top: 1.6em;">
                <i class="icon icon-search"></i> Search
            </a>
        </div>
    </div>
</form>

<ul class="unstyled">
    <% @filenames.each do |filename| %>
        <% relpath = @relpath.empty? ? filename : File.join(@relpath, filename) %>
        <% abspath = File.join(@abspath, filename) %>
        <% icon = File.directory?(abspath) ? 'folder-close' : 'file' %>
        <% icon = 'film' if icon == 'file' && VideoFile::EXTENSIONS.include?(File.extname(filename)[1..-1]) %>
        <li>
            <i class="icon icon-<%= icon %>"></i>
            <%= link_to filename, file_path_path(path: relpath) %>
        </li>
    <% end %>
</ul>
