<% if @file.use_vlc? %>

    <object type="application/x-vlc-plugin" data-time="<%= @file.time %>" data-duration="<%= @file.duration %>" data-src="file://<%= @file.full_path %>">
        <param name="autoplay" value="false" />
        <param name="toolbar" value="false" />
    </object>

<% else %>

    <video data-time="<%= @file.time %>">
        <source src="<%= @file.url %>"></source>
    </video>

<% end %>
