<% if @file.use_vlc? %>

    <object type="application/x-vlc-plugin" data-progress="<%= @file.progress %>" data-src="file://<%= @file.full_path %>">
        <param name="autoplay" value="false" />
        <param name="toolbar" value="false" />
    </object>

<% else %>

    <video data-progress="<%= @file.progress %>">
        <source src="<%= @file.url %>"></source>
    </video>

<% end %>
